<?xml version="1.0" encoding="UTF-8"?>
<project name="TheBigAdventure" default="jar" basedir="." xmlns:ivy="antlib:org.apache.ivy.ant">

    <!-- Proprietes -->
    <property name="src.dir" value="src"/>
    <property name="maps.dir" value="maps"/>
    <property name="docs.dir" value="docs"/>
    <property name="build.dir" value="build"/>
    <property name="classes.dir" value="${build.dir}/classes"/>
    <property name="lib.dir" value="lib"/>
    <property name="jar.dir" value="${build.dir}/jar"/>
    
    <!-- Tache pour compiler les sources -->
    <target name="compile">
        <mkdir dir="${classes.dir}"/>
        <javac srcdir="${src.dir}" destdir="${classes.dir}">
            <classpath>
                <fileset dir="${lib.dir}" includes="*.jar"/>
            </classpath>
        </javac>
    </target>

    <!-- Tache pour creer le jar executable -->
    <target name="jar" depends="compile">
        <mkdir dir="${jar.dir}"/>
        <jar destfile="${jar.dir}/thebigadventure.jar">
            <manifest>
                <attribute name="Main-Class" value="fr.uge.TheBigAventure.Main"/>
            </manifest>
            <fileset dir="${classes.dir}"/>
            <fileset dir="${lib.dir}" includes="*.jar"/>
            <fileset dir="${maps.dir}" includes="*.map"/>
            <fileset dir="${docs.dir}" includes="user.pdf, dev.pdf"/>
        </jar>
    </target>

    <!-- Tache pour generer la Javadoc -->
    <target name="javadoc" depends="compile">
        <mkdir dir="${docs.dir}/api"/>
        <javadoc sourcepath="${src.dir}" destdir="${docs.dir}/api">
            <classpath>
                <fileset dir="${lib.dir}" includes="*.jar"/>
                <fileset dir="${classes.dir}"/>
            </classpath>
        </javadoc>
    </target>

    <!-- Tache pour nettoyer le projet -->
    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>

</project>
